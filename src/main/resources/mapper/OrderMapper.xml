<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.pojo.Order">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="good_id" property="goodId" />
        <result column="shangjia_id" property="shangjiaId" />
        <result column="total_price" property="totalPrice" />
        <result column="num" property="num" />
        <result column="price" property="price" />
        <result column="status" property="status" />
        <result column="name" property="name" />
        <result column="phone" property="phone" />
        <result column="address" property="address" />
        <result column="create_time" property="createTime" />
        <association property="category" javaType="com.pojo.GoodCategory">
            <result property="name" column="categoryName"/>
        </association>
        <association property="shangjia" javaType="com.pojo.User">
            <result property="name" column="shangjiaName"/>
        </association>
        <association property="good" javaType="com.pojo.Good">
            <result property="name" column="goodName"/>
            <result property="sku" column="goodSku"/>
            <result property="image" column="goodImage"/>
        </association>
        <association property="user" javaType="com.pojo.User">
            <result property="name" column="userName"/>
        </association>
    </resultMap>

    <select id="adminGetAll" resultMap="BaseResultMap">
        select o.*,
        c.name as categoryName,
        u.name as userName,
        g.name as goodName,
        g.image as goodImage,
        g.sku as goodSku,
        g.category_id as categoryId,
        us.name as shangjiaName
        from t_order o
        left join t_user u on o.user_id = u.id
        left join t_good g on o.good_id = g.id
        left join t_good_category c on g.category_id = c.id
        left join t_user us on o.shangjia_id = us.id
        <where>
            <if test="userName != null and userName != '' ">
                and u.name like concat('%', #{userName}, '%')
            </if>
            <if test="goodName != null and goodName != '' ">
                and g.name like concat('%', #{goodName}, '%')
            </if>
            <if test="status != null and status != '' ">
                and o.status = #{status}
            </if>
        </where>
    </select>

    <select id="shangjiaGetAll" resultMap="BaseResultMap">
        select o.*,
        c.name as categoryName,
        u.name as userName,
        g.name as goodName,
        g.image as goodImage,
        g.sku as goodSku,
        g.category_id as categoryId,
        us.name as shangjiaName
        from t_order o
        left join t_user u on o.user_id = u.id
        left join t_good g on o.good_id = g.id
        left join t_good_category c on g.category_id = c.id
        left join t_user us on o.shangjia_id = us.id
        <where>
            and o.shangjia_id = #{shangjiaId}
            <if test="userName != null and userName != '' ">
                and u.name like concat('%', #{userName}, '%')
            </if>
            <if test="goodName != null and goodName != '' ">
                and g.name like concat('%', #{goodName}, '%')
            </if>
            <if test="status != null and status != '' ">
                and o.status = #{status}
            </if>
        </where>
    </select>

</mapper>
